{
    "name": "draco-vis",
    "version": "0.0.1",
    "description": "Draco on the web.",
    "main": "build/src/Draco.js",
    "typings": "build/src/Draco.d.ts",
    "scripts": {
        "test": "jest",
        "build": "rm -rf build && tsc && rollup -c",
        "format": "tslint -p . --fix && prettier --write '{src,test}/**/*.ts'",
        "lint": "tslint -p . && prettier --list-different '{src,test}/**/*.ts'",
        "watch": "concurrently --kill-others -n Typescript,Rollup 'tsc -w' 'rollup -c -w'"
    },
    "author": "Dominik Moritz",
    "license": "BSD-3-Clause",
    "devDependencies": {
        "@types/jest": "^22.2.3",
        "@types/node": "^9.0.0",
        "jest": "^22.4.3",
        "prettier": "^1.12.1",
        "rollup": "^0.58.2",
        "ts-jest": "^22.4.4",
        "tslint": "^5.9.1",
        "tslint-config-prettier": "^1.12.0",
        "typescript": "^2.8.3",
        "concurrently": "^3.5.1"
    },
    "jest": {
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ],
        "testPathIgnorePatterns": [
            "node_modules",
            "<rootDir>/build",
            "src"
        ]
    },
    "dependencies": {
        "rollup-plugin-commonjs": "^9.1.3",
        "rollup-plugin-node-resolve": "^3.3.0",
        "wasm-clingo": "0.0.4"
    }
}
