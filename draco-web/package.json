{
    "name": "draco-vis",
    "version": "0.0.6",
    "description": "Draco on the web.",
    "main": "build/draco.js",
    "unpkg": "build/draco.js",
    "jsdelivr": "build/draco.js",
    "module": "build/index.js",
    "typings": "build/index.d.ts",
    "scripts": {
        "test": "jest",
        "concat": "bash concat_lp.sh ../asp src",
        "build": "rm -rf build && tsc && rollup -c",
        "format": "tslint -p . --fix && prettier --write '{src,test}/**/*.ts'",
        "lint": "tslint -p . && prettier --list-different '{src,test}/**/*.ts'",
        "watch": "npm run build && concurrently --kill-others -n Typescript,Rollup 'tsc -w' 'rollup -c -w'",
        "start": "parcel demo/index.html"
    },
    "author": "Dominik Moritz",
    "license": "BSD-3-Clause",
    "devDependencies": {
        "@types/jest": "^22.2.3",
        "@types/node": "^10.3.0",
        "jest": "^23.1.0",
        "parcel-bundler": "^1.8.1",
        "prettier": "^1.13.3",
        "ts-jest": "^22.4.6",
        "tslint": "^5.10.0",
        "tslint-config-prettier": "^1.13.0",
        "typescript": "^2.8.3",
        "rollup": "^0.59.4",
        "rollup-plugin-commonjs": "^9.1.3",
        "rollup-plugin-node-builtins": "^2.1.2",
        "rollup-plugin-node-resolve": "^3.3.0",
        "concurrently": "^3.5.1"
    },
    "jest": {
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ],
        "testPathIgnorePatterns": [
            "node_modules",
            "<rootDir>/build",
            "src"
        ]
    },
    "dependencies": {
        "vega-lite": "^2.5.0",
        "wasm-clingo": "0.0.6"
    }
}
