{
  "private": true,
  "scripts": {
    "build-css": "node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/",
    "watch-css": "npm run build-css && node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/ --watch --recursive",
    "start-js": "webpack-dev-server --mode development --open",
    "build-js": "webpack --mode production",
    "start": "npm-run-all -p watch-css start-js",
    "build": "npm-run-all build-css build-js",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist"
  },
  "dependencies": {
    "classnames": "^2.2.5",
    "monaco-editor": "^0.13.1",
    "monaco-editor-webpack-plugin": "^1.2.0",
    "react": "^16.4.0",
    "react-dom": "^16.4.0",
    "react-monaco-editor": "^0.17.1",
    "react-split-pane": "^0.1.77",
    "wasm-clingo": "^0.0.5"
  },
  "devDependencies": {
    "@types/classnames": "^2.2.3",
    "@types/inline-style-prefixer": "^3.0.1",
    "@types/react": "^16.3.14",
    "@types/react-dom": "^16.0.5",
    "@types/react-monaco-editor": "^0.10.1",
    "@types/react-split-pane": "^0.1.67",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.4",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "copy-webpack-plugin": "^4.5.1",
    "css-loader": "^0.28.11",
    "gh-pages": "^1.1.0",
    "html-webpack-plugin": "^3.2.0",
    "node-sass-chokidar": "^1.3.0",
    "npm-run-all": "^4.1.3",
    "source-map": "^0.7.3",
    "source-map-loader": "^0.2.3",
    "style-loader": "^0.21.0",
    "ts-loader": "^4.3.0",
    "typescript": "^2.8.3",
    "webpack": "^4.9.1",
    "webpack-cli": "^2.1.4",
    "webpack-dev-server": "^3.1.4"
  }
}
